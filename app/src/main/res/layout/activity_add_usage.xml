<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    tools:context=".activities.AddUsageActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add "
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usage"
            android:textColor="@color/colorSecondary"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Select Year"
            android:textColor="@color/colorSecondary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/UsageYearInp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/spinner_background"
            android:backgroundTint="@color/colorWhite"
            android:backgroundTintMode="multiply"
            android:spinnerMode="dropdown"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Select Month"
            android:textColor="@color/colorSecondary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/UsageMonthInp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/spinner_background"
            android:backgroundTint="@color/colorWhite"
            android:backgroundTintMode="multiply"
            android:spinnerMode="dropdown"
            android:textColor="@color/colorSecondary"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Enter Amount"
            android:textColor="@color/colorSecondary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/UsageAmountInp"
            android:layout_width="102dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Enter Price (SGD$)"
            android:textColor="@color/colorSecondary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/UsagePriceInp"
            android:layout_width="102dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Select Utility Type"
            android:textColor="@color/colorSecondary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left">

            <RadioButton
                android:id="@+id/ElecCheckButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFEB3B"
                android:checked="true"
                android:text="Electricity"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold" />


            <RadioButton
                android:id="@+id/GasCheckButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#4CAF50"
                android:text="Gas"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/WaterCheckButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#2F69E6"
                android:text="Water"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_button_green"
            android:text="Add"/>
    </LinearLayout>

</LinearLayout>