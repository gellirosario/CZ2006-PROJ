<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/welcomebackTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Welcome Back,"
        android:textAllCaps="false"
        android:textColor="#009703"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/greendayTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomebackTV"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Have a GREEN Day!"
        android:textColor="@color/colorPrimaryDark"

        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBLANK"
        android:layout_width="wrap_content"
        android:layout_height="147dp"
        android:layout_below="@+id/greendayTV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="40dp"
        android:text="BLANK (FOR GRAPH)?"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/newsTV"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBLANK"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="277dp"
        android:text="News"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Tv5"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newsTV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="135dp"
        android:textSize="14sp"
        android:text="See what's happening around you" />

    <TextView
        android:id="@+id/viewmoreClickableTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newsTV"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="29dp"
        android:clickable="true"
        android:linksClickable="false"
        android:text="View More >"
        android:textSize="14sp" />

    <FrameLayout
        android:id="@+id/child_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        //For nested fragment

    </FrameLayout>


</RelativeLayout>